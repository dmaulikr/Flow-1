<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="flowapp.flow">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/BaseTheme"
        >
        <activity
            android:name=".Main.FlowSandBoxActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".Main.ElementDesignerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Main.TheStreamActivity"
            android:label="@string/title_activity_the_stream"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="flowapp.flow.Main.FlowStateActivity"
            android:label="@string/title_activity_flow_state"
            android:screenOrientation="portrait" />
        <activity android:name="flowapp.flow.Main.FinishedFlowActivity"
            android:screenOrientation="portrait"
            android:noHistory="true"></activity>
    </application>

</manifest>
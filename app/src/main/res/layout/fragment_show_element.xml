<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ShowElementActivity$ShowElementFragment">

    <ImageView
        android:contentDescription="Image of blank flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:id="@+id/frgmt_show_element_task_img"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/empty_task_large"/>

    <ViewSwitcher
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/frgmt_showelm_switcher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/frgmt_show_element_task_img">

        <TextView
            android:textAppearance=
                "?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:maxWidth = "200dip"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:text="placeholder_name"
            android:id="@+id/switcher_show_element_name" />

        <EditText
            android:visibility="gone"
            android:textAppearance=
                "?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:id="@+id/switcher_show_element_rename" />

    </ViewSwitcher>

    <ViewSwitcher
        android:layout_toEndOf="@id/frgmt_show_element_task_img"
        android:layout_below="@id/frgmt_showelm_switcher_name"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/frgmt_showelm_switcher_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:text="placeholder_name"
            android:textAppearance=
                "?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:maxWidth = "200dip"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:id="@+id/switcher_show_element_time" />

        <EditText
            android:visibility="gone"
            android:textAppearance=
                "?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:id="@+id/switcher_show_element_retime" />

    </ViewSwitcher>

    <ToggleButton
        android:id="@+id/frgmt_show_element_time_units_toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/frgmt_showelm_switcher_time"
        android:layout_alignTop="@id/frgmt_showelm_switcher_time"/>




</RelativeLayout>

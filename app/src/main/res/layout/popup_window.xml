<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/popup"
    android:background="@color/primary_text_default_material_light"
    android:paddingTop="9dp"
    android:paddingBottom="9dp">
    <!-- 12dp to account for 48dp from scaled ImageViews-->



    <!-- TODO FILL BUCKET WITH WHITE FOR GARBAGE CAN TO RENDER TRANSPARENT -->

    <ImageView
        android:layout_marginRight="15dp"
        android:layout_marginLeft="30dp"
        android:background="@color/primary_text_default_material_light"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="fitXY"
        android:src="@drawable/edit_48dp_blue"
        android:id="@+id/edit_item"
        />

    <ImageView

        android:layout_marginRight="30dp"
        android:layout_marginLeft="15dp"
        android:background="@color/primary_text_default_material_light"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="fitXY"
        android:src="@drawable/disposal_48dp"
        android:id="@+id/delete_item"/>



</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pressurelabs.flow">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".TheHubActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EULAActivity"
            android:label="@string/terms_of_use"
            android:parentActivityName=".TheHubActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TheHubActivity" />
        </activity>
        <activity
            android:name=".FlowSandBoxActivity"
            android:parentActivityName=".TheHubActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ElementDesignerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FlowStateActivity"
            android:parentActivityName=".FlowSandBoxActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FinishedFlowActivity"
            android:parentActivityName=".FlowSandBoxActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>
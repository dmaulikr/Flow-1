<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nhacks16.flow">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/FlowTheme"
        >
        <activity
            android:name=".UsersManagement.LandingActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UsersManagement.UserLogin"
            android:label="@string/title_activity_user_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Main.SandBoxMain"
            android:label="@string/title_activity_sand_box_main"
            android:screenOrientation="portrait" />
        <activity android:name=".Main.ElementDesigner"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Main.TheStream"
            android:label="@string/title_activity_the_stream"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main.FlowStateActivity"
            android:label="@string/title_activity_flow_state"
            android:theme="@style/FlowTheme"
            android:screenOrientation="portrait" />
        <activity android:name=".Main.FinishedFlowActivity"
            android:screenOrientation="portrait"
            android:noHistory="true"></activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pressurelabs.flow">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <intent-filter>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.BROWSABLE" />
            <!-- Accepts URIs that begin with "http://www.example.com/gizmos” -->
            <data
                android:host="www.pressurelabs.com" />
            <!-- Accepts URIs that begin with "example://gizmos” -->
            <data android:scheme="pressurelabs" />
        </intent-filter>
        <activity
            android:name=".TheHubActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".EULAActivity"
            android:label=""
            android:parentActivityName=".TheHubActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TheHubActivity" />
        </activity>

        <activity
            android:name=".FlowSandBoxActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ElementDesignerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FlowStateActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".FinishedFlowActivity"
            android:noHistory="true"
            android:screenOrientation="portrait" />



    </application>

</manifest>